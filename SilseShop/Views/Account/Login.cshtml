@model SilseShop.ViewModels.LoginViewModel
@{
   ViewData["Title"] = "Login";
}

<div class="container body-border">
   <form asp-antiforgery="true" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
      <div>
         <div class="validation" asp-validation-summary="ModelOnly"></div>
         <div>
            <label asp-for="Login" ></label> <br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
         </div>
         <div>
            <label asp-for="Password" ></label> <br /> 
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
         </div>
         <div>
            <label asp-for="RememberMe" ></label>
            <input asp-for="RememberMe" />
         </div>
         <input class="btn btn-success btn-sm" type="submit" value="Авторизироваться" />
      </div>
   </form>
</div>
@section scripts{

   <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
   <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}